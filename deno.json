{
  "unstable": ["cron"],
  "lock": false,
  "tasks": {
    "dev": "deno run --env-file --watch -A main.tsx",
    "start": "deno run --env-file -A main.tsx",
    "db:sync": "deno run --env-file -A scripts/sync.ts"
  },
  "imports": {
    "@db/postgres": "jsr:@db/postgres@^0.19.5",
    "hono": "jsr:@hono/hono@^4",
    "linkedom": "npm:linkedom@^0.18.12"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "hono/jsx",
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns",
      "deno.unstable"
    ]
  },
  "deploy": {
    "org": "tristanisham",
    "app": "hackers-directory"
  }
}
